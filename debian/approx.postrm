#!/bin/sh -e

remove_inetd() {
    if [ -x "$(command -v update-inetd)" ]; then
        update-inetd --remove "^.*approx"
    fi
}

remove_cache() {
    rm -rf /var/cache/approx
}

case "$1" in
    remove)
        remove_inetd
        ;;
    purge)
        remove_inetd
        remove_cache
        ;;
esac

